import("//build/toolchain/wasm.gni")

# This toolchain is only to be used by the canvaskit target below.
wasm_toolchain("canvaskit_no_wasm_opt") {
  extra_toolchain_args = {
    # Include ICU data.
    skia_use_icu = true
    skia_use_client_icu = false

    # Include image codecs.
    skia_use_libjpeg_turbo_decode = true
    skia_use_libpng_decode = true
    skia_use_libwebp_decode = true

    # Disable LTO.
    enable_lto = false
  }
}

# TODO(hterkelsen): Refactor this to use templates for the shared code.

group("canvaskit_group") {
  public_deps = [
    ":canvaskit_group_copy_js",
    ":canvaskit_group_wasm_opt_action",
    "//third_party/skia/modules/canvaskit(:canvaskit_no_wasm_opt)",
  ]
  visibility = [ "//flutter/web_sdk:*" ]
}

action("canvaskit_group_wasm_opt_action") {
  public_deps =
      [ "//third_party/skia/modules/canvaskit(:canvaskit_no_wasm_opt)" ]
  script = "run_wasm_opt.py"
  outputs = [ "$root_out_dir/canvaskit/canvaskit.wasm" ]
  args = [
    "--input",
    rebase_path("$root_out_dir/canvaskit_no_wasm_opt/canvaskit.wasm"),
    "--output",
    rebase_path("$root_out_dir/canvaskit/canvaskit.wasm"),
  ]
}

copy("canvaskit_group_copy_js") {
  public_deps =
      [ "//third_party/skia/modules/canvaskit(:canvaskit_no_wasm_opt)" ]
  sources = [ "$root_out_dir/canvaskit_no_wasm_opt/canvaskit.js" ]
  outputs = [ "$root_out_dir/canvaskit/canvaskit.js" ]
}

# This toolchain is only to be used by canvaskit_chromium_group below.
wasm_toolchain("canvaskit_chromium_no_wasm_opt") {
  extra_toolchain_args = {
    # In Chromium browsers, we can use the browser's APIs to get the necessary
    # ICU data.
    skia_use_icu = false
    skia_use_client_icu = true
    skia_icu_bidi_third_party_dir = "//flutter/third_party/canvaskit/icu_bidi"

    # TODO(mdebbar): Set these to false once all image decoding can be done
    # using the browser's built-in codecs.
    # https://github.com/flutter/flutter/issues/122331

    # In Chromium browsers, we can use the browser's built-in codecs.
    skia_use_libjpeg_turbo_decode = true
    skia_use_libpng_decode = true
    skia_use_libwebp_decode = true

    # Disable LTO.
    enable_lto = false
  }
}

group("canvaskit_chromium_group") {
  visibility = [ "//flutter/web_sdk:*" ]
  public_deps = [
    ":canvaskit_chromium_group_copy_js",
    ":canvaskit_chromium_group_wasm_opt_action",
    "//third_party/skia/modules/canvaskit(:canvaskit_chromium_no_wasm_opt)",
  ]
}

action("canvaskit_chromium_group_wasm_opt_action") {
  public_deps = [
    "//third_party/skia/modules/canvaskit(:canvaskit_chromium_no_wasm_opt)",
  ]
  script = "run_wasm_opt.py"
  outputs = [ "$root_out_dir/canvaskit/chromium/canvaskit.wasm" ]
  args = [
    "--input",
    rebase_path("$root_out_dir/canvaskit_chromium_no_wasm_opt/canvaskit.wasm"),
    "--output",
    rebase_path("$root_out_dir/canvaskit/chromium/canvaskit.wasm"),
  ]
}

copy("canvaskit_chromium_group_copy_js") {
  public_deps = [
    "//third_party/skia/modules/canvaskit(:canvaskit_chromium_no_wasm_opt)",
  ]
  sources = [ "$root_out_dir/canvaskit_chromium_no_wasm_opt/canvaskit.js" ]
  outputs = [ "$root_out_dir/canvaskit/chromium/canvaskit.js" ]
}
