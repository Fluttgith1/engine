    "//flutter/shell/testing",
    "//lib/ftl",
    "//lib/tonic",
    "//third_party/skia",
    "//third_party/glfw",
  ]

  ldflags = [ "-lGL", "-lX11", "-lXi", "-lXrandr", "-lXxf86vm", "-lXinerama", "-lXcursor", "-lrt", "-lm" ]
